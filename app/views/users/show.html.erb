<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="user_name">Name</label><br>
    <input id="user_name" name="user[name]" type="text" value="{{getPlayerName()}}" />
  </div>
  <div class="field">
    <label for="user_turn">Turn</label><br>
    <input id="user_turn" name="user[turn]" type="text" value="{{getTurn()+1}}"/>
  </div>
  <div class="field">
    <label for="user_email">Email</label><br>
    <input id="user_email" name="user[email]" type="text" value=""/>
  </div>
  <div class="field">
    <label for="user_students">Students</label><br>
    <input id="user_students" name="user[students]" type="text" value="{{getStudents()}}"/>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


   </div>
  </div>

</body>
</html>












